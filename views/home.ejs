<p><%= homeText  %></p>

<% posts.forEach(post => { %>
<form action="" method="post">
    <h1><%= post.title  %></h1>
    <p><%= post.content.slice(0, 100) + "..." %>
    <a href="/posts/<%= post._id %>">Read more</a>
    </p>
</form>

<% }); %>

